#include "timer/timer.h"

//-------------------------------------------------------------------------------------------------------------------
// 函数简介       定时中断初始化
// 参数说明       void
// 返回参数       void
//-------------------------------------------------------------------------------------------------------------------
void timer_Init(void)
{
    //开启定时器计数中断,使用CCU60_CH0 ，定时1ms
    pit_ms_init(CCU60_CH0, 1);
}


//-------------------------------------------------------------------------------------------------------------------
// 函数简介       定时中断服务函数
// 参数说明       void
// 返回参数       void
//-------------------------------------------------------------------------------------------------------------------
void timer_interrupt(void)
{
    //开启定时器计数中断,使用CCU60_CH0 ，定时1ms
    pit_ms_init(CCU60_CH0, 1);
}

